model Promotion {
  id        String   @id @default(uuid())
  type      PromotionType
  startsAt  DateTime
  endsAt    DateTime

  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([type])
  @@index([startsAt, endsAt])
  @@index([productId])
  
}