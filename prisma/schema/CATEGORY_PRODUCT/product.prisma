model Product {
  id            String  @id @default(uuid())
  slug          String?  @unique
  title         String
  description   String
  price         Float
  discountPrice Float?
  stock         Int
  brand         String?
  isActive      Boolean @default(true)

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  images     ProductImage[]
  cartItems  CartItem[]
  orderItems OrderItem[]
  reviews    Review[]

  promotions Promotion[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([categoryId])
  @@index([price])
  @@index([slug])
}